        {
            "label": "项目状态检查",
            "type": "shell",
            "command": "make",
            "args": [
                "status"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}